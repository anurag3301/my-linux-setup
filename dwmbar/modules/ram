#!/bin/bash

# Prints the total ram and used ram in Mb

PREFIX='ï¡š '

get_ram()
{
    TOTAL_RAM=$(free -mh --si | awk  {'print $2'} | head -n 2 | tail -1)
    USED_RAM=$(free -mh --si | awk  {'print $3'} | head -n 2 | tail -1)
    MB="MB"

    printf "\x02%s%s\x01\\n" "$PREFIX" "$USED_RAM/$TOTAL_RAM"
}

get_ram
